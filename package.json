{
  "name": "fastify-ts-boilerplate",
  "version": "1.0.0",
  "description": "A quick starter pack for fastify with typescript",
  "main": "index.js",
  "author": "Paul.O",
  "license": "MIT",
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "dev": "nodemon",
    "lint": "eslint --fix",
    "start": "node  -r ts-node/register/transpile-only -r tsconfig-paths/register dist/index.js",
    "prepare": "husky install",
    "postinstall": "husky install"
  },
  "dependencies": {
    "fastify": "^3.20.2",
    "ts-node": "^10.2.1"
  },
  "devDependencies": {
    "@types/node": "^16.7.1",
    "@typescript-eslint/eslint-plugin": "^4.29.2",
    "@typescript-eslint/parser": "^4.29.2",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^3.4.1",
    "husky": "^7.0.1",
    "nodemon": "^2.0.12",
    "typescript": "^4.3.5"
  }
}
